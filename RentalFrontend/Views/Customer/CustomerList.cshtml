@model CustomerOrderViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="container  row p-0 m-0">
    <div class="col-9">
        <h2>Customers</h2>
    </div>
    <div class="col-3">
        <a class="btn-lg btn-success" asp-action="Create">New Customer</a>
    </div>
    <div class=" pre-scrollable col-12 border p-3 mt-3" style="max-height: 75vh" >

        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Firstname
                </th>
                <th>
                    Lastname
                </th>
                <th>

                </th>
            </tr>


            @foreach (var customer in Model.AllCustomers)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    
                    <form>
                        <input type="hidden" asp-for="@Model.CustomerId" value="@customer.Id"/>
                        <td class="text-right">
                            <button type="submit" class="btn btn-primary" asp-action="CustomerDetails">Customer page</button>
                        </td>
                    </form>
                </tr>
            }
        </table>
    </div>
</div>