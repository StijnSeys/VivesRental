@model CustomerOrderViewModel

<h4>ID: @Model.Order.Id </h4>

<div class="list-group">
    @foreach (var orderLine in Model.OrderLines)
    {
        <div>
            <p>Article: @orderLine.ProductName</p>
        </div>

        @if (orderLine.ReturnedAt.HasValue)
        {
            <p style="color: green"> Returned: @orderLine.ReturnedAt</p>
        }
        else
        {
            <p style="color: red"> Expires: @orderLine.ExpiresAt</p>
        }
    }

</div>